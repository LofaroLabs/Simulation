<!-- IKEA table, white table top with 4x Red legs -->
<!-- Overall Size(m): 1.2(Length) x 0.6(Width) x 0.74(Height) -->
<!-- Overall Mass(kg): 10.6 -->

<!-- Important Note -->
<!-- x Axis = Width , y Axis = Length , Z Axis = Height -->

<KinBody name="ValveBase">
    <Body name="base" type="static">
        <!-- Mass(kg)=10.6 -->
        <Mass type="mimicgeom">
            <total>100</total>
        </Mass>
        <!--Bottom base-->
	<Geom type="cylinder">
	    <rotationaxis>1 0 0 90</rotationaxis>
            <Radius>0.05</Radius>
            <Height>3</Height>
            <diffuseColor>1.0 1.0 0.0</diffuseColor>
            <Translation>0.5 0 0</Translation>
	</Geom>
        <!--Extruding base for handle-->
        <Geom type="cylinder">
	    <rotationaxis>1 0 0 90</rotationaxis>
	    <rotationaxis>0 1 0 105</rotationaxis>
            <Radius>0.033</Radius>
            <Height>0.75</Height>
            <diffuseColor>1.0 1.0 0.0</diffuseColor>
            <Translation>0.25 0 0</Translation>
	</Geom>
        <Geom type="cylinder">
	    <rotationaxis>1 0 0 90</rotationaxis>
	    <rotationaxis>0 1 0 105</rotationaxis>
            <Radius>0.025</Radius>
            <Height>0.3</Height>
            <diffuseColor>1.0 1.0 0.0</diffuseColor>
            <Translation>-0.05 0 0.08</Translation>
	</Geom>
        <Geom type="cylinder">
	    <rotationaxis>1 0 0 90</rotationaxis>
	    <rotationaxis>0 1 0 105</rotationaxis>
            <Radius>0.1</Radius>
            <Height>0.02</Height>
            <diffuseColor>1.0 1.0 0.0</diffuseColor>
            <Translation>-0.19 0 0.14</Translation>
	</Geom>
    </Body>
</KinBody>

